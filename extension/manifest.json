{
  "manifest_version": 2,
  "name": "Twitter Cleaner",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {},
  "background": {
    "page": "src/background.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.jsdelivr.net; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*"
      ],
      "js": [
        "dist/inject.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "src/*",
    "dist/*",
    "assets/*"
  ]
}
